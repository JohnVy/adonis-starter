{
  "extends": "@adonisjs/tsconfig/tsconfig.client.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./*"],
      "~/components/*": ["./components/*"],
      "~/layouts/*": ["./layouts/*"],
      "~/pages/*": ["./pages/*"],
      "~/style/*": ["./styles/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
